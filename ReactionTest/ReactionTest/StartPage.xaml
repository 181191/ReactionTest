<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReactionTest.StartPage"
             Title="Reactiontest">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="HVL.jpg"
                   VerticalOptions="Center"/>
                   
            <Label Text="Choose test length:"
                   Scale="1.5"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="3 minute test" 
                    
                    
                    HorizontalOptions="CenterAndExpand"
                    Clicked="ThreeMinuteTestClicked"
                    WidthRequest="400"/>
                    
            <Button Text="7 minute test" 
                    
                     
                    HorizontalOptions="CenterAndExpand"
                    Clicked="SevenMinuteTestClicked"
                    WidthRequest="400"/>
            <Button Text="10 minute test" 
                    
                    HorizontalOptions="CenterAndExpand"
                    Clicked="TenMinuteTestClicked"
                    WidthRequest="400"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>