<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ReactionTest"
             x:Class="ReactionTest.MainPage">


    <StackLayout >
        <!-- Place new controls here -->

        <Label   
                Text="{DynamicResource changeString}"
               FontSize="30"
               VerticalOptions="LayoutOptions.End"
               HorizontalOptions="Center"
               Margin="0, 50, 0, 0"/>
               
        <Button Text= "{DynamicResource changeButton}"
                Padding ="60, 100, 60, 100"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked= "OnButtonClicked"
                WidthRequest="250"
                HeightRequest="250"
                BackgroundColor="{DynamicResource buttonColor}}"/>
    </StackLayout>

</ContentPage>
